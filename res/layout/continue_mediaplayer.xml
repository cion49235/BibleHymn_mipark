<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
     android:background="@color/bg_btn_layer" 
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     xmlns:android="http://schemas.android.com/apk/res/android">
    <include
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      layout="@layout/layout_default_title" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/list_line" />
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">
        <LinearLayout
             android:gravity="center" 
             android:orientation="vertical" 
             android:id="@+id/rssImageLayout" 
             android:paddingLeft="20.0dip"
             android:paddingTop="0.0dip"
             android:paddingRight="20.0dip"
             android:paddingBottom="0.0dip"
             android:layout_width="fill_parent" 
             android:layout_height="wrap_content"
             android:layout_weight="1.0">
            <FrameLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content">
                    <ImageView 
                        android:id="@+id/img_image" 
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/album_frame" 
                        android:layout_centerInParent="true" />
                    <LinearLayout 
                        android:orientation="vertical"
                        android:id="@+id/layout_progress" 
                        android:layout_width="fill_parent" 
                        android:layout_height="wrap_content" 
                        android:layout_centerInParent="true" 
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">
                        <ProgressBar 
                            android:layout_gravity="center" 
                            android:id="@android:id/progress"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" 
                            style="?android:progressBarStyle" />
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
		    <RelativeLayout
		          android:visibility="gone"
		          android:id="@+id/admob_native"
		          android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:layout_gravity="center_horizontal"
		          android:gravity="center"> 
		    </RelativeLayout>	
        <RelativeLayout
          android:id="@+id/ad_layout"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content" 
          android:layout_gravity="center_horizontal"> 
        </RelativeLayout>
        
        <LinearLayout
             android:orientation="vertical" 
             android:id="@+id/control_panel_layout"
             android:layout_width="fill_parent" 
             android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_title"
                 android:textSize="@dimen/text_m"
                 android:textColor="@color/black"
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10.0dip" 
                 android:layout_marginTop="5.0dip" 
                 android:singleLine="true"/>
            <TextView
                 android:visibility="invisible"
                 android:textSize="@dimen/text_s"
                 android:textColor="@color/black" 
                 android:id="@+id/txt_pubDate" 
                 android:layout_width="fill_parent" 
                 android:layout_height="wrap_content" 
                 android:layout_marginLeft="10.0dip" 
                 android:layout_marginBottom="10.0dip"
                 android:singleLine="true" />
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <SeekBar 
                    android:id="@+id/mediacontroller_progress"
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="10.0dip" 
                    android:layout_marginRight="10.0dip" 
                    android:thumb="@drawable/seek_thumb" />
            </LinearLayout>
            <FrameLayout 
                android:id="@+id/time_layout" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.0dip">
                <TextView 
                    android:textSize="@dimen/text_s"
                    android:layout_gravity="left" 
                    android:id="@+id/current_time"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="10.0dip"
                    android:text="00:00:00" 
                    android:textColor="@color/black_70"/>
                
                <TextView 
                    android:textSize="@dimen/text_s" 
                    android:layout_gravity="right"
                    android:id="@+id/max_time" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:layout_marginRight="10.0dip"
					android:text="00:00:00" 
					android:textColor="@color/black_70"/>
            </FrameLayout>
            <LinearLayout 
                android:gravity="center" 
                android:orientation="horizontal" 
                android:id="@+id/control_btn_layout"
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:layout_marginTop="0.0dip" 
                android:layout_marginBottom="10.0dip">
                <ImageButton 
                    android:id="@+id/bt_rew" 
                    android:layout_weight="1.0" 
                    style="@style/MediaButton.Rew"/>
                <ImageButton
                     android:id="@+id/bt_duration_rew"
                     android:layout_weight="1.0" 
                     style="@style/MediaButton.Duration.Rew" />
                <ImageButton
                     android:id="@+id/bt_pause"
                     android:layout_weight="1.0"
                      style="@style/MediaButton.Play" />
                <ImageButton 
                    android:id="@+id/bt_duration_ffwd" 
                    android:layout_weight="1.0"
                    style="@style/MediaButton.Duration.Ffwd" />
                <ImageButton 
                    android:id="@+id/bt_ffwd" 
                    android:layout_weight="1.0" 
                    style="@style/MediaButton.Ffwd" />
                <ImageView
                     android:id="@+id/btn_media_continue"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/btn_general_selector"
                     android:src="@drawable/btn_bg_ic_background"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
