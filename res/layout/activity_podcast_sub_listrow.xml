<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
  	xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_marginLeft="3.0dip"
        android:layout_marginRight="3.0dip"
        android:layout_weight="1.0">
        <TextView 
            android:id="@+id/txt_sub_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <LinearLayout
             android:orientation="vertical" 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" >
            <TextView
                 android:id="@+id/txt_sub_pubdate"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
           <ProgressBar 
	             android:visibility="invisible"
	             android:id="@+id/progress_down" 
	             android:layout_width="fill_parent" 
	             android:layout_height="wrap_content" 
	             android:indeterminate="false"
	             android:indeterminateOnly="false"
	             style="@style/Widget.Sherlock.Light.ProgressBar.Horizontal" />
           
        </LinearLayout>
    </LinearLayout>
     <ImageButton 
        android:layout_gravity="center_vertical" 
        android:id="@+id/bt_sub_down"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginRight="6.0dip"  
        android:src="@drawable/btn_bg_download"/>
    <ImageButton 
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        android:id="@+id/bt_sub_continue" 
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5.0dip"
        android:src="@drawable/btn_bg_continue" />
</LinearLayout>
