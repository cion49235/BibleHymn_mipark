<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!--  Active -->
	<item android:state_selected="true" android:state_focused="false"
		android:state_pressed="false" android:drawable="@color/bg" />
	<!--  Inactive -->
	<item android:state_selected="false" android:state_focused="false"
		android:state_pressed="false" android:drawable="@color/bg" />
	<!--  Pressed -->
	<item android:state_pressed="true" android:drawable="@color/general_select" />
	<!--  Selected (using d-pad) -->
	<item android:state_focused="true" android:state_selected="true"
		android:state_pressed="false" android:drawable="@color/general_select" />
</selector> 