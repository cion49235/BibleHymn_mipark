<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="MediaButton">
        <item name="android:background">@drawable/media_button_background</item>
        <item name="android:layout_width">52.0dip</item>
        <item name="android:layout_height">52.0dip</item>
    </style>
    
    <style name="MyTheme"
            parent="android:Theme.Holo.Light">
	<item name="android:actionBarSize">50dip</item>
        <item name="android:actionBarTabTextStyle">@style/MyTheme.ActionBar.Tab.Text</item>     
        <item name="android:actionBarTabStyle">@style/MyTheme.ActionBar.Tab</item>
    </style>
        
    <style name="MyTheme.ActionBar.Tab.Text"
            parent="android:TextAppearance">
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="MyTheme.ActionBar.Tab" 
            parent="android:Widget.Holo.ActionBar.TabView">
	<item name="android:background">@drawable/actionbar_tab_bg</item>
    </style>
    
    
    <style name="ThemeHoloWithActionBar" parent="android:Theme.Holo.Light">
    <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
    <item name="android:actionBarSize">80dp</item>
	</style>

	<style name="ActionBarTabStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
	    <item name="android:minHeight">80dp</item>
	</style>
	
	<style name="NotificationTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
	<style name="MediaButton.Duration.Rew" parent="@style/MediaButton">
        <item name="android:src">@drawable/ic_action_rewind</item>
    </style>
    
	<style name="MediaButton.Rew" parent="@style/MediaButton">
        <item name="android:src">@drawable/ic_action_previous</item>
    </style>
    
	<style name="MediaButton.Play" parent="@style/MediaButton">
        <item name="android:src">@drawable/ic_action_play</item>
    </style>
    
	<style name="MediaButton.Ffwd" parent="@style/MediaButton">
        <item name="android:src">@drawable/ic_action_next</item>
    </style>
    
	<style name="MediaButton.Duration.Ffwd" parent="@style/MediaButton">
        <item name="android:src">@drawable/ic_action_fast_forward</item>
    </style>
    
	<style name="MediaButton.Continue" parent="@style/MediaButton">
        <item name="android:src">@drawable/btn_bg_ic_background</item>
    </style>
    
	<style name="ButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="ButtonSimple">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
    </style>
    
    <style name="Widget.ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
    </style>
	
	<style name="Widget.Light" />
	
    <style name="Widget.Light.ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
    </style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="Widget.Light.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>
    
     <style name="Theme.Favorite.Light.Dialog" parent="@android:style/Theme.Dialog">
    </style>
    
     <style name="NewDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>
    
     <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    
     <drawable name="ab_bg_black">#aa000000</drawable>
</resources>
